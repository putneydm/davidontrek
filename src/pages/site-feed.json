---
layout: null
---
[{% for post in site.posts %}
    {
      "title": "{{ post.title | strip_html | xml_escape  }}",
      "post": "{{post.content | strip_html |  newline_to_br | xml_escape | replace: '&lt;br /&gt;', ' ' | remove: '&lt;p&gt;' | replace: '&lt;/p&gt;', ' ' | replace: '&lt;/blockquote&gt;', ' ' | strip_newlines }}",
      "link": "{{post.url | xml_escape}}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}]
